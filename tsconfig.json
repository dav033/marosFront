{
  "extends": null,
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build"
  ],
  "compilerOptions": {
    /* Resolución / imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      /* === Compatibilidad con tu árbol actual === */
      "@components/*": ["src/components/*", "src/shared/ui/*"],
      "@layouts/*": ["src/layouts/*", "app/(dashboard)/*"],
      "@pages/*": ["src/pages/*"],            // Solo mientras migras a /app
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@services/*": ["src/services/*", "src/shared/infra/*"],
      "@hooks/*": ["src/hooks/*"],
      "@contexts/*": ["src/contexts/*"],
      "@utils/*": ["src/utils/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    /* Sugerencias de calidad */
    "strict": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true
  }
}
