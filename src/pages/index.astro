---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Dashboard - Maros Construction">
  <div class="space-y-6">
    <h1 class="text-3xl font-bold text-white">Dashboard</h1>

    <!-- Quick Navigation Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <a
        href="/contacts"
        class="bg-gray-800 p-6 rounded-lg hover:bg-gray-700 transition-colors duration-200"
        data-astro-prefetch={typeof window !== 'undefined' && window.navigator && window.navigator.connection && (window.navigator.connection.saveData || window.navigator.connection.effectiveType === '2g' || window.navigator.connection.effectiveType === 'slow-2g') ? undefined : 'hover'}
      >
        <h2 class="text-xl font-semibold text-white mb-2">Contacts</h2>
        <p class="text-gray-300">Manage your client contacts</p>
      </a>

      <a
        href="/leads/construction"
        class="bg-gray-800 p-6 rounded-lg hover:bg-gray-700 transition-colors duration-200"
        data-astro-prefetch={typeof window !== 'undefined' && window.navigator && window.navigator.connection && (window.navigator.connection.saveData || window.navigator.connection.effectiveType === '2g' || window.navigator.connection.effectiveType === 'slow-2g') ? undefined : 'hover'}
      >
        <h2 class="text-xl font-semibold text-white mb-2">
          Construction Leads
        </h2>
        <p class="text-gray-300">View construction projects</p>
      </a>

      <a
        href="/leads/plumbing"
        class="bg-gray-800 p-6 rounded-lg hover:bg-gray-700 transition-colors duration-200"
        data-astro-prefetch={typeof window !== 'undefined' && window.navigator && window.navigator.connection && (window.navigator.connection.saveData || window.navigator.connection.effectiveType === '2g' || window.navigator.connection.effectiveType === 'slow-2g') ? undefined : 'hover'}
      >
        <h2 class="text-xl font-semibold text-white mb-2">Plumbing Leads</h2>
        <p class="text-gray-300">View plumbing projects</p>
      </a>
    </div>
  </div>
</Layout>
