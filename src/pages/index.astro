---
import Layout from "@/layouts/Layout.astro";

const cards = [
  {
    title: "Construction Leads",
    description: "Manage construction project leads",
    href: "/leads/construction",
    icon: "üèóÔ∏è",
    gradient: "from-blue-500 to-blue-700",
    hoverGradient: "from-blue-600 to-blue-800",
  },
  {
    title: "Plumbing Leads",
    description: "Manage plumbing service leads",
    href: "/leads/plumbing",
    icon: "üîß",
    gradient: "from-cyan-500 to-cyan-700",
    hoverGradient: "from-cyan-600 to-cyan-800",
  },
  {
    title: "Roofing Leads",
    description: "Manage roofing project leads",
    href: "/leads/roofing",
    icon: "üè†",
    gradient: "from-orange-500 to-orange-700",
    hoverGradient: "from-orange-600 to-orange-800",
  },
  {
    title: "Contacts",
    description: "Manage your contacts and clients",
    href: "/contacts",
    icon: "üë•",
    gradient: "from-green-500 to-green-700",
    hoverGradient: "from-green-600 to-green-800",
  },
];
---

<Layout title="Dashboard - Maros Construction">
  <div class="flex flex-col items-center justify-center min-h-full p-8">
    <div class="max-w-6xl w-full">
      <h1 class="text-5xl font-bold mb-3 text-center bg-clip-text text-transparent bg-linear-to-r from-blue-400 to-purple-500">
        Welcome to Maros Construction
      </h1>
      <p class="text-xl text-gray-400 mb-20 text-center">
        Select a section to get started
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 px-4 md:px-8">
        {
          cards.map((card, index) => (
            <a
              href={card.href}
              class="card group relative overflow-hidden rounded-3xl bg-gray-900/50 backdrop-blur-sm px-8 py-10 pt-12 transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl border-2 border-gray-800 hover:border-gray-700"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class={`absolute inset-0 bg-linear-to-br ${card.gradient} opacity-0 group-hover:opacity-20 transition-opacity duration-500`} />
              
              <div class="relative z-10 flex flex-col h-full">
                <h2 class="text-3xl font-bold mb-3 text-white group-hover:text-blue-300 transition-colors duration-300">
                  {card.title}
                </h2>
                
                <p class="text-lg text-gray-400 group-hover:text-gray-300 transition-colors duration-300 mb-6">
                  {card.description}
                </p>
                
                <div class="mt-auto flex items-center text-base font-semibold text-gray-500 group-hover:text-white transition-colors duration-300">
                  <span>Go to section</span>
                  <svg class="w-6 h-6 ml-3 transform group-hover:translate-x-3 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .grid > a {
    animation: fadeIn 0.5s ease-out forwards;
  }

  .grid > a:nth-child(1) {
    animation-delay: 0.1s;
  }

  .grid > a:nth-child(2) {
    animation-delay: 0.2s;
  }

  .grid > a:nth-child(3) {
    animation-delay: 0.3s;
  }

  .grid > a:nth-child(4) {
    animation-delay: 0.4s;
  }
</style>
